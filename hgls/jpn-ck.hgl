    "f" -> "ㅍ"
    "m" -> "ㅁ"
    "l" -> "ㄹ"

    "ya" -> "야"
    "yu" -> "유"
    "yo" -> "요"

    "ija" -> "ㅑ"
    "iju" -> "ㅠ"
    "ijo" -> "ㅛ"

    "wa" -> "ㅘ"
    "wi" -> "ㅟ"
    "we" -> "ㅞ"
    "wo" -> "ㅝ"

    "a" -> "ㅏ"
    "i" -> "ㅣ"
    "u" -> "ㅜ"
