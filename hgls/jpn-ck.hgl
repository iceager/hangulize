lang:
    id         = "jpn-ck"
    codes      = "ja", "jpn"
    english    = "Japanese (C.K.)"
    korean     = "일본어(최영애-김용옥)"
    script     = "kana"
    pronouncer = "furigana"

config:
    author = "Heungsub Lee <sub@subl.ee>"
    stage  = "draft"

rewrite:
    "・" -> ""

    "ァ" -> "'a"
    "ィ" -> "'i"
    "ゥ" -> "'u"
    "ェ" -> "'e"
    "ォ" -> "'o"

    "ウ'" -> "w"
    "フ'" -> "f"
    "ブ'" -> "v"

    "ア" -> "a"
    "イ" -> "i"
    "ウ" -> "u"
    "エ" -> "e"
    "オ" -> "o"

    "カ" -> "ka"
    "キ" -> "ki"
    "ク" -> "ku"
    "ケ" -> "ke"
    "コ" -> "ko"

    "ガ" -> "ga"
    "ギ" -> "gi"
    "グ" -> "gu"
    "ゲ" -> "ge"
    "ゴ" -> "go"

    "サ" -> "sa"
    "シ" -> "si"
    "ス" -> "su"
    "セ" -> "se"
    "ソ" -> "so"

    "ザ" -> "za"
    "ジ" -> "zi"
    "ズ" -> "zu"
