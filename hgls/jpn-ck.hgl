    "ハ" -> "ha"
    "ヒ" -> "hi"
    "フ" -> "hu"
    "ヘ" -> "he"
    "ホ" -> "ho"

    "バ" -> "ba"
    "ビ" -> "bi"
    "ブ" -> "bu"
    "ベ" -> "be"
    "ボ" -> "bo"

    "パ" -> "pa"
    "ピ" -> "pi"
    "プ" -> "pu"
    "ペ" -> "pe"
    "ポ" -> "po"

    "マ" -> "ma"
    "ミ" -> "mi"
    "ム" -> "mu"
    "メ" -> "me"
    "モ" -> "mo"

    "ヤ" -> "ya"
    "ユ" -> "yu"
    "ヨ" -> "yo"

    "ャ" -> "ja"
    "ュ" -> "ju"
    "ョ" -> "jo"

    "ラ" -> "la"
    "リ" -> "li"
    "ル" -> "lu"
    "レ" -> "le"
    "ロ" -> "lo"

    "ワ" -> "wa"
    "ヰ" -> "i"
    "ヱ" -> "e"
    "ヲ" -> "o"

    "ン" -> "N"
    "ッ" -> "T"
    "ヴ" -> "b"

    # Small Vowels
    "u'o"     -> "o"
    "o'u"     -> "o"
    "i'e"     -> "je"
    "(u|e)'i" -> "i"

    # Long Vowel Sign
    "{a}ー" -> "a"
    "{i}ー" -> "i"
    "{u}ー" -> "u"
    "{e}ー" -> "i"
    "{o}ー" -> "o"

    # Long Vowels
    "{(y|j)o}o" -> "o"
    "{o}u"      -> "o"

